---
import Layout from "../layouts/Page.astro";
import { getEntry } from "astro:content";

const about = await getEntry("pages", "about");
const { Content } = await about.render();
---

<Layout>
	<div class="text-center flex flex-col">
		<img
			src={about.data.bannerImage}
			alt={about.data.bannerImageAlt}
			class="max-h-min p-1"
		/>
		<div class="md:text-4xl max-md:text-3xl text-neutral underline">
			{about.data.intro}
		</div>

		<div class="flex mt-8 max-lg:flex-col">
			<img
				src={about.data.featuredImage}
				alt={about.data.featuredImageAlt}
				class="object-scale-down object-top max-sm:hidden max-lg:max-w-lg max-lg:mx-auto max-w-sm"
			/>
			<div class="p-4">
				<Content />
			</div>
		</div>
	</div>
</Layout>
