---
import { SITE_TITLE } from "../consts";
import FBIcon from "../assets/facebook.svg";
import IGIcon from "../assets/instagram.svg";
import TTIcon from "../assets/tiktok.svg";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";

const location = await getEntry("pages", "location");
const contact = location.data.contact;
const { Content } = await location.render();
const today = new Date();
---

<footer class="flex-1 flex flex-col justify-end">
		<div id="footer-content" class="p-12 flex flex-col text-center gap-4 bg-slate-100 rounded-md">
			<div class="md:flex md:justify-between lg:justify-around">
				<div class="[&>*]:my-1">
					<Content />
				</div>
				<div id="footer-contact" class="[&>*]:my-2">
				{
					contact && (
			
							<h3>Contact Us</h3>
							<p class="text-lg italic">{contact?.address}</p>
							<p class="text-lg italic">{contact?.phone}</p>
							<p class="text-lg italic">{contact?.email}</p>
					)
				}
							<div id="footer-socials" class="flex justify-center gap-2">
					<a href="https://facebook.com/1022gelato" target="_blank" rel="noreferrer"
						><Image
							src={FBIcon}
							alt="facebook"
							class="filter-color-primary"
							width={30}
							height={30}
						/></a
					>
					<a
						href="https://instagram.com/1022gelato/"
						target="_blank"
						rel="noreferrer"
						><Image
							src={IGIcon}
							alt="Instagram"
							class="filter-color-primary"
							width={30}
							height={30}
						/></a
					>
					<a href="https://tiktok.com/@1022gelato" target="_blank" rel="noreferrer"
						><Image
							src={TTIcon}
							alt="Instagram"
							class="filter-color-primary"
							width={30}
							height={30}
						/></a
					>
				</div>
				</div>
			
			</div>
				<div id="footer-copyright" class="text-lg italic mt-4">
					&copy; {today.getFullYear()} -
					{SITE_TITLE}
				</div>
		</div>
</footer>
